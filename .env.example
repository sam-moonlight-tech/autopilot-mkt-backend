# Autopilot Backend Environment Variables
# Copy this file to .env and fill in your values

# Application
APP_NAME=autopilot-backend
APP_ENV=development
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8080

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SECRET_KEY=your-secret-key
SUPABASE_SIGNING_KEY_JWK={"kty":"EC","kid":"your-key-id","use":"sig","alg":"ES256","crv":"P-256","x":"your-x-coordinate","y":"your-y-coordinate","d":"your-private-key"}

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o

# Pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-environment
PINECONE_INDEX_NAME=autopilot-products
