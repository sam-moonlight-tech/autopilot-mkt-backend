# Autopilot Backend Environment Variables
# Copy this file to .env and fill in your values

# Application
APP_NAME=autopilot-backend
APP_ENV=development
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8080

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SECRET_KEY=your-secret-key
SUPABASE_SIGNING_KEY_JWK={"kty":"EC","kid":"your-key-id","use":"sig","alg":"ES256","crv":"P-256","x":"your-x-coordinate","y":"your-y-coordinate","d":"your-private-key"}

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o

# Token Budgets (increase for local dev testing)
TOKEN_BUDGET_ANONYMOUS_DAILY=100000
TOKEN_BUDGET_AUTHENTICATED_DAILY=500000

# Pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-environment
PINECONE_INDEX_NAME=autopilot-products

# Stripe (Production)
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-signing-secret
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key

# Stripe (Test - for test accounts in production)
# These are used when a profile has is_test_account=true
STRIPE_SECRET_KEY_TEST=sk_test_your-stripe-test-secret-key
STRIPE_WEBHOOK_SECRET_TEST=whsec_your-test-webhook-signing-secret